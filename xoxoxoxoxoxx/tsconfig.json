{
  "compilerOptions": {
    "target": "ES2024",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "ES2024",
      "dom"
    ],
    "skipLibCheck": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
